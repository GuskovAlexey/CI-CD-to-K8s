Pipeline {
    agent any 
    
    tools {
        NodeJS '18.0.0'
    }
    
    environment {
        APP_PATH = "/app"
    }
    stages {
        stage('Build') {
            steps{
              dir(APP_PATH){
                sh "npm install"
                }
              }
            }
            steps{
              dir(APP_PATH) {
                sh "npm run lint"
              }
            }  
    }
}