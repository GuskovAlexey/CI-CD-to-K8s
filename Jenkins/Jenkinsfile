#!/usr/bin/env groovy
pipeline {
  agent any
    
  tools {
    dockerTool 'docker'
  }
  environment{
    APP_PATH = "app" 
    DOCKER_REGISTRY = "alexeyguskov/react-app-test"
    dockerhub = credentials('dockerhub')
    TAG = "latest"
  }  
  stages {
        
    stage('Prepare') {
        steps {
          script {
            IMAGE_NAME = "${DOCKER_REGISTRY}/react:${TAG}"
          }
        }
    }
     
    stage('Build') {
      steps {
        dir(APP_PATH){
            sh "docker build -t ${IMAGE_NAME} -f Dockerfile ."
        }
      }
    }   
    stage('Push') {
        steps {
          withDockerRegistry(credentialsId: 'dockerhub', toolName: 'docker', url: 'https://hub.docker.com/') {
            dir(APP_PATH){
                sh "docker push ${IMAGE_NAME}"
            }
          }      
        }
    } 
  }
}